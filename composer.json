{
    "name": "balsama/nytpuzzlehelper",
    "description": "This isn't for the crossword. It's for the little puzzles that are in the upper right of the preceding page in the magazine.",
    "type": "library",
    "require": {
        "php": "^8.1",
        "najidev/permutation": "^1",
        "mathieuviossat/arraytotexttable": "^1.0",
        "symfony/yaml": "^6.1",
        "symfony/filesystem": "^6.1",
        "symfony/finder": "^6.1",
        "meyfa/php-svg": "^0.14.7",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "license": "gpl-2.0-or-later",
    "autoload": {
        "psr-4": {
            "Balsama\\Nytpuzzlehelper\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs": "phpcs --standard=PSR12 src tests",
        "cfb": "phpcbf --standard=PSR12 src tests"
    }
}
